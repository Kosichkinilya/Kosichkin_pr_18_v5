<Window x:Class="Kosichkin_pr_18_v5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kosichkin_pr_18_v5"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Студенты 18" Height="450" Width="800">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem 
                Header="Добавить"
                Click="Add_an_entry">

            </MenuItem>
            <MenuItem 
                Header="Редактировать" 
                Click="Edit_an_entry" >

            </MenuItem>
            <MenuItem 
                Header="Удалить" 
                Click="Delete_an_entry" >

            </MenuItem>
            <MenuItem
                Header="Выход"
                Click="Close_the_program" >

            </MenuItem>
        </Menu>




        <DataGrid
            x:Name="DataGrid"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            Background="white" 
            Margin="0,20,0,63"/>




        <Grid Margin="0,371,0,0" Height="63" VerticalAlignment="Top">
            <Button
                Content="Добавить"
                Background="White" 
                FontSize="20"
                HorizontalAlignment="Left" 
                Margin="10,10,0,0" 
                VerticalAlignment="Top"
                Height="49" Width="256"
                Click="Add_an_entry"/>
            <Button
                Content="Редактировать"
                Background="White" 
                FontSize="20" 
                HorizontalAlignment="Center"
                Margin="0,10,0,0" 
                VerticalAlignment="Top"
                Height="49" Width="256"
                Click="Edit_an_entry"/>
            <Button
                Content="Удалить"
                Background="White"
                FontSize="20" 
                HorizontalAlignment="Left" 
                Margin="533,10,0,0"
                VerticalAlignment="Top"
                Height="49" Width="256"
                Click="Delete_an_entry"/>

        </Grid>


    </Grid>


</Window>
